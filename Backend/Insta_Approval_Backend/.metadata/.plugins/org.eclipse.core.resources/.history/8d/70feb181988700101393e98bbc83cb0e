package com.example.insta_approval_backend.controller;

import java.util.List;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.insta_approval_backend.model.LoanType;
import com.example.insta_approval_backend.repositoriy.LoanTypeRepository;


@RestController
@RequestMapping("/api/v1/loan-types")
@CrossOrigin("*")
public class LoanTypeController {

    private final LoanTypeRepository loanTypeRepo;

    public LoanTypeController(LoanTypeRepository loanTypeRepo) {
        this.loanTypeRepo = loanTypeRepo;
    }

    @GetMapping
    public List<LoanType> getAllLoanTypes() {
        return loanTypeRepo.findAll();
    }
}
